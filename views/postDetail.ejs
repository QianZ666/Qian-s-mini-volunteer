<%- include('header') %> 
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="post-content shadow-sm p-4 bg-white rounded">
        <div class="post-container">
          <!-- profile photo -->
          <img src="https://bootdey.com/img/Content/avatar/avatar3.png" alt="user" class="profile-photo-md float-start me-3">

          <div class="post-detail">
            <div class="user-info mb-2">
              <h5 class="mb-1">Help Request: <%= post.title %></h5>
              <p class="text-muted">Posted on <%= post.createdAt.toLocaleString() %></p>
            </div>

            <!-- post content -->
            <div class="post-text mb-3">
              <p><%= post.description %></p>
              <p><strong>üìç</strong> <%= post.location %></p>
              <p><strong>üìÖ</strong> <%= post.date.toLocaleDateString('en-CA') %> <strong>üïê Time:</strong> <%= post.time %></p>
              <p><strong>‚ö†Ô∏è</strong> <%= post.urgency %></p>
              <p><strong>üìû</strong> <%= post.contact %></p>
              <hr>
              <% const acceptedVolunteer = post.volunteers && post.volunteers.find(v => v.status === "holding")  %>
              <% if(isOwner) { %>
                <div id="taskStatus"  class="alert alert-info mt-3">
                  <strong>Task Status:</strong>
                  <% if(acceptedVolunteer) { %>
                    Accept by <%= acceptedVolunteer.name %>
                    (phone: <%= acceptedVolunteer.phone %>)
                    -Status: <%= acceptedVolunteer.status %>
                    <% } else { %>
                      No volunteer has accepted this task yet.
                    <% } %>
                </div>
                    <% } else { %>
                      <% if(!acceptedVolunteer) { %>
                      <button id="AcceptBtn" class="btn btn-success" data-id="<%= post._id %>">Accept</button>
                      <div id="volunteerForm" style="display:none; margin-top: 10px;">
                        <input type="text" id="volName" placeholder="Name" required />
                        <input type="text" id="volPhone" placeholder="Phone" required />
                        <button id="submitVol" type ="button" class ="btn btn-success">Submit</button>
                      </div>
                    <% } else { %>
                      <div  class="alert alert-secondary mt-3">
                         Accepted by <%= acceptedVolunteer.name %> - Status: <%= acceptedVolunteer.status %>
                      </div>
              <% } %>
             <% } %>
                     <!-- post image -->
              <% if (post.photoPath) { %>
                <img src="/uploads/<%= post.photoPath %>" alt="post-image" class="img-fluid w-50 rounded mb-3">

              <% } else { %>
                <img src="https://www.bootdey.com/image/400x150/FFB6C1/000000" alt="default-image" class="img-fluid rounded mb-3">
              <% } %>

            <!-- comment -->
            <form action="/post/<%= post._id %>/comment" method="POST" class="d-flex mt-2">
              <input type="text" name="text" class="form-control me-2" placeholder="Leave a comment" required>
              <button type="submit" class="btn btn-primary">Send</button>
            </form>

            <!-- show-->
            <div id="comment-list" class="mt-3">
              <% if (post.comments && post.comments.length > 0) { %>
                <% post.comments.forEach(comment => { %>
                  <div class="d-flex align-items-center mt-2">
                    <img src="/uploads/default-avatar.png" class="profile-photo-sm me-2">
                    <span><%= comment.text %></span>
                  </div>
                <% }) %>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('footer') %> 
<script src="/js/postDetail.js"></script>